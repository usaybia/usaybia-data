   <idno type="URI">https://usaybia.net/factoid/14-49-1</idno>
   <listRelation>
      <relation type="person" ref="http://syriaca.org/keyword/patron-of" active="https://usaybia.net/person/2713" passive="https://usaybia.net/person/356">
         <desc>
            <persName ref="https://usaybia.net/person/356">Abū Sulaymān Dāwūd ibn Abī l-Munā ibn Abī Fānah</persName> served the
            <persName ref="https://usaybia.net/person/2713">Fatimid Caliphs</persName> in Egypt and was admired by them for his medical knowledge.
         </desc>
      </relation>
   </listRelation>
   <bibl type="urn">
